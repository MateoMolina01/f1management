<UserControl x:Class="f1management.View.MiembrosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource ColorFondo}">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Botón Volver -->
        <Button Content="← Volver"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Padding="6,2"
                FontSize="12"
                Background="Transparent"
                Foreground="{StaticResource ColorPrincipal}"
                BorderBrush="Transparent"
                Cursor="Hand"
                Click="Volver_Click"
                Grid.ColumnSpan="2"/>

        <!-- Lista de miembros -->
        <ListView x:Name="ListaMiembros"
                  Grid.Column="0"
                  Margin="0,30,10,0"
                  SelectionChanged="ListaMiembros_SelectionChanged"
                  Background="White"
                  BorderThickness="1"
                  BorderBrush="{StaticResource ColorPrincipal}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nombre" Width="100" DisplayMemberBinding="{Binding Nombre}"/>
                    <GridViewColumn Header="Rol" Width="80" DisplayMemberBinding="{Binding Rol}"/>
                    <GridViewColumn Header="Monoplaza" Width="90" DisplayMemberBinding="{Binding MonoplazaAsignado}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Detalles del miembro -->
        <StackPanel Grid.Column="1" Margin="10,30,0,0" VerticalAlignment="Top">
            <TextBlock Text="Nombre" FontWeight="Bold"/>
            <TextBox x:Name="TxtNombre" Margin="0,5,0,15"/>

            <TextBlock Text="Rol" FontWeight="Bold"/>
            <ComboBox x:Name="CmbRol" Margin="0,5,0,15">
                <ComboBoxItem Content="Ingeniero"/>
                <ComboBoxItem Content="Mecánico"/>
                <ComboBoxItem Content="Jefe de equipo"/>
                <ComboBoxItem Content="Analista de datos"/>
            </ComboBox>

            <TextBlock Text="Monoplaza asignado" FontWeight="Bold"/>
            <TextBox x:Name="TxtMonoplaza" Margin="0,5,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                <Button Content="Guardar cambios" Margin="0,0,10,0" Padding="12,4" Click="Guardar_Click"/>
                <Button Content="Eliminar" Padding="12,4" Click="Eliminar_Click"/>
            </StackPanel>

            <Button Content="Añadir nuevo miembro"
                    Padding="12,6"
                    Width="180"
                    Click="Añadir_Click"
                    Background="{StaticResource ColorPrincipal}"
                    Foreground="White"
                    BorderBrush="Transparent"/>
        </StackPanel>
    </Grid>
</UserControl>
